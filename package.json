{
  "name": "codepaw",
  "displayName": "CodePaw",
  "description": "Your virtual pet that evolves with your coding habits",
  "version": "1.0.2",
  "publisher": "Pyro18",
  "author": {
    "name": "Marius Noroaca",
    "email": "marius.noroaca@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/Pyro18/codepaw",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pyro18/codepaw.git"
  },
  "bugs": {
    "url": "https://github.com/Pyro18/codepaw/issues"
  },
  "keywords": [
    "pet",
    "coding",
    "gamification",
    "productivity",
    "git",
    "tracking"
  ],
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.100.0"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#FF6B6B",
    "theme": "dark"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codePaw.showStats",
        "title": "Open CodePaw Dashboard",
        "category": "CodePaw",
        "icon": "$(graph)"
      },
      {
        "command": "codePaw.showAchievements",
        "title": "View Achievements",
        "category": "CodePaw",
        "icon": "$(bullseye)"
      },
      {
        "command": "codePaw.feedPet",
        "title": "Feed Pet",
        "category": "CodePaw",
        "icon": "$(gift)"
      },
      {
        "command": "codePaw.petStatus",
        "title": "Pet Status",
        "category": "CodePaw",
        "icon": "$(info)"
      },
      {
        "command": "codePaw.resetPet",
        "title": "Reset Pet",
        "category": "CodePaw",
        "icon": "$(refresh)"
      },
      {
        "command": "codePaw.checkAchievements",
        "title": "Check Achievements",
        "category": "CodePaw",
        "icon": "$(trophy)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codePaw",
          "title": "CodePaw",
          "icon": "$(heart)"
        }
      ]
    },
    "views": {
      "codePaw": [
        {
          "type": "webview",
          "id": "codePaw.petView",
          "name": "Your Pet",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "codePaw.showStats",
          "when": "view == codePaw.petView",
          "group": "navigation@1"
        },
        {
          "command": "codePaw.showAchievements",
          "when": "view == codePaw.petView",
          "group": "navigation@2"
        },
        {
          "command": "codePaw.feedPet",
          "when": "view == codePaw.petView",
          "group": "actions@1"
        },
        {
          "command": "codePaw.checkAchievements",
          "when": "view == codePaw.petView",
          "group": "actions@2"
        }
      ],
      "commandPalette": [
        {
          "command": "codePaw.showStats"
        },
        {
          "command": "codePaw.showAchievements"
        },
        {
          "command": "codePaw.feedPet"
        },
        {
          "command": "codePaw.petStatus"
        },
        {
          "command": "codePaw.resetPet"
        },
        {
          "command": "codePaw.checkAchievements"
        }
      ]
    },
    "configuration": {
      "title": "CodePaw",
      "properties": {
        "codePaw.petName": {
          "type": "string",
          "default": "Pypy",
          "description": "Name of your virtual pet"
        },
        "codePaw.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save pet progress"
        },
        "codePaw.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show pet status in status bar"
        },
        "codePaw.enableNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Enable achievement and milestone notifications"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "vscode-test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}
